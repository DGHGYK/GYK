<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">

    <CheckBox
        android:id="@+id/cb_item_check"
        style="@android:style/Widget.CompoundButton.CheckBox"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_guestName"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/cb_item_check"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toLeftOf="@+id/iv_item_guestStatus"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/tv_item_id"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:paddingLeft="20dp"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cb_item_check" />

    <TextView
        android:id="@+id/tv_item_lastProcess"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:paddingLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_guestName" />

    <TextView
        android:id="@+id/tv_item_answer"
        android:layout_width="0dp"
        android:layout_height="20sp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:paddingLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_item_lastProcess"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_guestName"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/iv_item_guestStatus"
        android:layout_width="32sp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:background="@color/background"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>