<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">

    <Spinner
        android:id="@+id/spnr_paper_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"/>

    <Spinner
        android:id="@+id/spnr_paper_size"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"/>

    <Spinner
        android:id="@+id/spnr_card_unit_price"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"/>

    <Spinner
        android:id="@+id/spnr_envelope_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"/>

    <Spinner
        android:id="@+id/spnr_envelope_price"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"/>

    <Spinner
        android:id="@+id/spnr_zarf_astar_price"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"/>

    <EditText
        android:id="@+id/txt_recipient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Davetli Adi:"
        android:paddingTop="10dp"
        android:paddingLeft="30dp"/>

    <EditText
        android:id="@+id/txt_adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Adres:"
        android:paddingTop="10dp"
        android:paddingLeft="30dp"/>

    <EditText
        android:id="@+id/txt_order_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Siparis Notu:"
        android:paddingTop="10dp"
        android:paddingLeft="30dp"/>

    <TextView
        android:id="@+id/txt_cargo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Davetiyeniz ERTESİ GÜN KARGOYA TESLİM!"
        android:paddingLeft="30dp"/>

    <Button
        android:id="@+id/btn_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="115dp"
        android:layout_marginRight="115dp"
        android:layout_marginTop="184dp"
        android:background="@drawable/buttonshape"
        android:onClick="sepeteEkle"
        android:text="SEPETE EKLE"
        android:paddingLeft="10dp"
        android:textColor="@color/colorLogin" />

</LinearLayout>