<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">


    <Button
        android:id="@+id/btn_actionbar_sablon"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textColor="#F3F3F3"
        android:background="@drawable/buttonshape2"
        android:text="şablon"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btn_actionbar_save"
        android:layout_toStartOf="@+id/btn_actionbar_save"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp" />

    <Button
        android:id="@+id/btn_actionbar_color"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textColor="#F3F3F3"
        android:background="@drawable/buttonshape2"
        android:text="renk"

        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btn_actionbar_font"
        android:layout_toStartOf="@+id/btn_actionbar_font"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

    <Button
        android:id="@+id/btn_actionbar_font"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textColor="#F3F3F3"
        android:background="@drawable/buttonshape2"
        android:text="yazı tipi"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btn_actionbar_sablon"
        android:layout_toStartOf="@+id/btn_actionbar_sablon" />

    <Button
        android:id="@+id/btn_actionbar_save"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:textColor="#F3F3F3"
        android:background="@drawable/buttonshape"
        android:text="kaydet"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>